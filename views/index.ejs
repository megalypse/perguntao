    <%- include("partials/links") %>
</head>

<body>
    <%- include("partials/navbar") %>
    <div class="row no-gutters">
        <div class="col-12 d-flex justify-content-center mt-3 mb-3">
            <h1>Perguntas</h1>
        </div>
        <div class="col-12 d-flex justify-content-center mt-3 mb-3">
            <a href="/perguntar" class="btn btn-primary">Fazer pergunta</a>
        </div>
        <div class="offset-1 col-10 d-flex flex-wrap justify-content-center">
            <% perguntas.forEach(pergunta => { %>
                <div class="card mt-3 mb-3 question-div">
                    <div class="card-body d-flex justify-content-start">
                        <h3><%= pergunta.titulo %></h3>
                    </div>
                    <div class="card-footer d-flex justify-content-start">
                        <a href="/perguntas/<%= pergunta.id %>" class="btn btn-primary mr-3">Responder</a>
                        <form action="/perguntas/deleter" method="POST">
                            <input type="number" name="deleter" value=<%= pergunta.id %> class="hidden">
                            <button type="submit" class="btn btn-primary">Apagar pergunta</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    </div>
    <%- include("partials/scripts") %>
</body>

</html>